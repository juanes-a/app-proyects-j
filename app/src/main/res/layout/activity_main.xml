<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fitsSystemWindows="true">

    <!-- App Bar con menú y acciones -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4A6CF7"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="#4A6CF7">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gestor de Proyectos"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="24dp"/>

                <TextView
                    android:id="@+id/subtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bienvenido, Sebastián"
                    android:textColor="#E1E9FF"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/titleText"
                    app:layout_constraintStart_toStartOf="@id/titleText"
                    android:layout_marginBottom="8dp"/>

                <!-- Botón de notificaciones -->
                <ImageButton
                    android:id="@+id/btnNotifications"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_popup_reminder"
                    android:tint="#FFFFFF"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:layout_constraintBottom_toBottomOf="@id/titleText"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Notificaciones"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin">

                <!-- Menú de opciones -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMenu"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Menú"
                    android:textColor="#FFFFFF"
                    app:icon="@android:drawable/ic_menu_more"
                    app:iconTint="#FFFFFF"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <!-- Botón de búsqueda -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSearch"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Buscar"
                    android:textColor="#FFFFFF"
                    app:icon="@android:drawable/ic_search"
                    app:iconTint="#FFFFFF"
                    app:iconGravity="textEnd"
                    app:iconPadding="8dp"/>
            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Fila de botones rápidos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNewProject"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Nuevo"
                    android:textColor="#4A6CF7"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconTint="#4A6CF7"
                    app:strokeColor="#4A6CF7"
                    app:strokeWidth="1dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTasks"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Tareas"
                    android:textColor="#6C5CE7"
                    app:icon="@android:drawable/ic_menu_agenda"
                    app:iconTint="#6C5CE7"
                    app:strokeColor="#6C5CE7"
                    app:strokeWidth="1dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTeams"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Equipos"
                    android:textColor="#FF7675"
                    app:icon="@android:drawable/ic_menu_myplaces"
                    app:iconTint="#FF7675"
                    app:strokeColor="#FF7675"
                    app:strokeWidth="1dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReports"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reportes"
                    android:textColor="#00B894"
                    app:icon="@android:drawable/ic_menu_info_details"
                    app:iconTint="#00B894"
                    app:strokeColor="#00B894"
                    app:strokeWidth="1dp"/>
            </LinearLayout>

            <!-- Tarjetas de estadísticas (ahora con botones) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Proyectos -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="151dp"
                        android:background="#4A6CF7"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_dialog_info"
                            android:tint="#FFFFFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="12"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Proyectos"
                            android:textColor="#E1E9FF"
                            android:textSize="14sp" />

                        <!-- Botón Ver Todos -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnViewProjects"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="7dp"
                            android:layout_marginTop="8dp"
                            android:text="VER TODOS"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            app:icon="@android:drawable/ic_menu_more"
                            app:iconSize="12dp"
                            app:iconTint="#FFFFFF" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tareas -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="145dp"
                        android:background="#6C5CE7"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_agenda"
                            android:tint="#FFFFFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="24"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tareas"
                            android:textColor="#E1E9FF"
                            android:textSize="14sp" />

                        <!-- Botón Ver Todas -->
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Equipos -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:background="#FF7675"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_myplaces"
                            android:tint="#FFFFFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="5"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Equipos"
                            android:textColor="#FFE8E8"
                            android:textSize="14sp" />

                        <!-- Botón Ver Todos -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnViewTeams"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="VER TODOS"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            app:icon="@android:drawable/ic_menu_more"
                            app:iconSize="12dp"
                            app:iconTint="#FFFFFF" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Sección de proyectos recientes con botón de acción -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Proyectos Recientes"
                            android:textColor="#2D3436"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddProject"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AÑADIR"
                            android:textColor="#4A6CF7"
                            android:textSize="12sp"
                            android:textAllCaps="true"
                            app:icon="@android:drawable/ic_input_add"
                            app:iconTint="#4A6CF7"
                            app:iconSize="14dp"/>
                    </LinearLayout>

                    <!-- Lista de proyectos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Proyecto 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <View
                                android:layout_width="4dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="12dp"
                                android:background="#4A6CF7"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="App Móvil"
                                    android:textColor="#2D3436"
                                    android:textSize="16sp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="80% completado"
                                    android:textColor="#636E72"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnProjectDetails"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Detalles"
                                android:textColor="#4A6CF7"
                                android:textSize="12sp"
                                app:strokeColor="#4A6CF7"
                                app:strokeWidth="1dp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="4dp"
                            android:background="#E0E0E0"/>

                        <!-- Proyecto 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <View
                                android:layout_width="4dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="12dp"
                                android:background="#6C5CE7"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Sitio Web"
                                    android:textColor="#2D3436"
                                    android:textSize="16sp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Diseño UI/UX"
                                    android:textColor="#636E72"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnProjectDetails2"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Detalles"
                                android:textColor="#6C5CE7"
                                android:textSize="12sp"
                                app:strokeColor="#6C5CE7"
                                app:strokeWidth="1dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sección de tareas urgentes con botón de acción -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tareas Urgentes"
                            android:textColor="#2D3436"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddTask"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AÑADIR"
                            android:textColor="#FF7675"
                            android:textSize="12sp"
                            android:textAllCaps="true"
                            app:icon="@android:drawable/ic_input_add"
                            app:iconTint="#FF7675"
                            app:iconSize="14dp"/>
                    </LinearLayout>

                    <!-- Lista de tareas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Tarea 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="12dp"
                                android:src="@android:drawable/ic_menu_agenda"
                                android:tint="#FF5252"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Corregir bugs críticos"
                                    android:textColor="#2D3436"
                                    android:textSize="16sp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Hoy - 18:00"
                                    android:textColor="#FF5252"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <CheckBox
                                android:id="@+id/checkTask1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="#4A6CF7"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="4dp"
                            android:background="#E0E0E0"/>

                        <!-- Tarea 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="12dp"
                                android:src="@android:drawable/ic_menu_agenda"
                                android:tint="#FFA000"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Reunión con cliente"
                                    android:textColor="#2D3436"
                                    android:textSize="16sp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Mañana - 09:00"
                                    android:textColor="#FFA000"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <CheckBox
                                android:id="@+id/checkTask2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="#4A6CF7"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewTasks"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="VER TODAS"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:icon="@android:drawable/ic_menu_more"
                app:iconSize="12dp"
                app:iconTint="#FFFFFF" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Botón flotante principal -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_input_add"
        android:tint="#FFFFFF"
        app:backgroundTint="#4A6CF7"
        app:elevation="8dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>